{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./apps/stars/node_modules/@types",
      "./apps/chess/node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true
  },
  "include": ["vite.config.ts", "vite-plugins/**/*.ts"]
}
